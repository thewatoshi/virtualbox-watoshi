<Include xmlns="http://wixtoolset.org/schemas/v4/wxs">

    <!-- VBoxSUP.sys installation. -->
    <Custom Action="ca_VBoxSupDrvInstParms" Before="ca_VBoxSupDrvInst"
            Condition="NOT REMOVE" />
    <Custom Action="ca_VBoxSupDrvInst" After="InstallFiles"
            Condition="NOT REMOVE" />

    <!-- Start VBoxSUP.sys after installation. -->
    <Custom Action="ca_VBoxSupDrvStartParms" Before="ca_VBoxSupDrvStart"
            Condition="NOT REMOVE" />
    <Custom Action="ca_VBoxSupDrvStart" After="ca_VBoxSupDrvInst"
            Condition="NOT REMOVE" />

    <!-- VBoxSUP.sys uninstallation.
         Done when initially installing or upgrading.
         Must happen *after* all other drivers relying on it are unloaded.
         See custom action sequences of the other drivers. -->
    <Custom Action="ca_VBoxSupDrvUninstParms" Before="ca_VBoxSupDrvUninst" />
    <Custom Action="ca_VBoxSupDrvUninst" After="ca_VBoxUSBMonDrvUninst" />

    <Custom Action="ca_GetPlatformArchitecture" Before="LaunchConditions"/>
<?if $(env.VBOX_WITH_CRT_PACKING) = "no" ?>
    <Custom Action="ca_IsMSCRTInstalled" Before="LaunchConditions"/>
<?endif?>
    <!-- Required for lauch conditions. See @bugref{10616} -->
    <Custom Action="ca_CheckTargetDirPre" Before="LaunchConditions" />
    <!-- Check if the installation directory still fits our security requirements after we finalized installation.
         See @bugref{10616} -->
    <Custom Action="ca_CheckTargetDirPost" After="InstallFinalize" Condition="NOT REMOVE"/>

    <Custom Action="ca_IsWindowsSupported" After="FileCost"/>

</Include>
